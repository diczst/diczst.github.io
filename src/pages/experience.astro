<style>
	section {
		padding-bottom: 30px;
	}
	div {
		margin-bottom: 20px;
	}
	.card {
		display: block;
		padding: 1.5rem;
		margin: 0.5rem 0;
		border: none;
		background-color: transparent;
		transition: background-color 0.5s ease-out;
	}


	@media (prefers-color-scheme: dark) {
		.card:hover {
			background: #2a2a2a;
		}
	}
	.grid {
        margin-top: 8px;
		display: grid;
		grid-gap: 1rem;
		grid-template-columns: 1fr auto;
	}
	@media screen and (max-width: 640px) {
		.grid {
			grid-template-columns: 1fr;
		}
	}
	.grid li {
		flex: 50%;
	}
	h1 {
		font-size: 3rem;
	}
	h3 {
		font-size: 1.5rem;
		margin-top: -1%;
	}
	ul {
		margin-left: 30px;
	}
</style>
